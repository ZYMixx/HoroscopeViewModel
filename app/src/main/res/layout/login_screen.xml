<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/sign_card_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="45dp"
        android:elevation="10dp"
        >

        <ImageView
            android:id="@+id/sign_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/leo"
            android:scaleType="fitCenter"
            />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_marginTop="10dp"
        android:id="@+id/sign_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_card_view"
        android:background="#0000"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/data_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_spinner"
        android:background="#0000"
        android:gravity="center"
        />

    <Button
        android:id="@+id/accept_button"
        android:text="choose your zodiac sign and date \n then click!"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:layout_width="200dp"
        android:alpha="0.9"
        android:paddingVertical="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_spinner"
        />

</androidx.constraintlayout.widget.ConstraintLayout>